# Bots EDI Environment Configuration
# Copy this file to .env and update with your settings

# Environment name (used for session cookies and identification)
BOTSENV=production

# Django Secret Key - CHANGE THIS IN PRODUCTION!
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Debug mode - MUST be False in production
DEBUG=False

# Database Configuration
DATABASE_ENGINE=sqlite3
# For PostgreSQL:
# DATABASE_ENGINE=postgresql_psycopg2
# DATABASE_NAME=botsdb
# DATABASE_USER=bots
# DATABASE_PASSWORD=your-password
# DATABASE_HOST=127.0.0.1
# DATABASE_PORT=5432

# For MySQL:
# DATABASE_ENGINE=mysql
# DATABASE_NAME=botsdb
# DATABASE_USER=bots
# DATABASE_PASSWORD=your-password
# DATABASE_HOST=127.0.0.1
# DATABASE_PORT=3306

# Time Zone
TIME_ZONE=UTC

# Email Configuration
EMAIL_HOST=localhost
EMAIL_PORT=25
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=bots@localhost

# Site Configuration (for email links)
SITE_URL=http://localhost:8080
SITE_NAME=EDI System

# Partner Portal Settings
PARTNER_SESSION_TIMEOUT=1800
PARTNER_MAX_UPLOAD_SIZE=10485760
PARTNER_FAILED_LOGIN_LOCKOUT=5
PARTNER_LOCKOUT_DURATION=900
PARTNER_PASSWORD_MIN_LENGTH=8

# Webserver Configuration
WEBSERVER_PORT=8080
WEBSERVER_ENVIRONMENT=production

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Directories (optional - defaults to relative paths)
# BOTSSYS_DIR=/path/to/botssys
# USERSYS_DIR=/path/to/usersys

# Logging
LOG_LEVEL=INFO
LOG_CONSOLE=True

# Security
SESSION_COOKIE_AGE=3600
SESSION_EXPIRE_AT_BROWSER_CLOSE=True
